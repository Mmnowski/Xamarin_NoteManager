<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NoteWizard.Views.SettingsPage"             
             Title="{Binding Title}"
             BackgroundColor="{DynamicResource backgroundColor}"
             >
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Text="Pokaż tytuły notatek" Grid.Row="0" Grid.Column="0" XAlign="Center" YAlign="Center" TextColor ="{DynamicResource textColor}"/>
        <Label Text="Tryb ciemny" Grid.Row="1" Grid.Column="0" XAlign="Center" YAlign="Center" TextColor ="{DynamicResource textColor}"/>
        <Switch Grid.Row="0" Grid.Column="2" IsToggled="{Binding Toggled}" Toggled="ToggleName"/>
        <Switch Grid.Row="1" Grid.Column="2" IsToggled="{Binding DarkMode}" Toggled="ToggleDarkMode"/>

    </Grid>

    
        
    
</ContentPage>